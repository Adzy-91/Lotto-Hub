<android.support.v7.widget.CardView
    android:id="@+id/cardViewPrizeContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:foreground="@drawable/foreground_orange"
    android:clickable="true"
    app:cardElevation="1dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linLayoutPrizeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPrize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:textColor="@color/ticket"
            />

        <LinearLayout
            android:id="@+id/linLayoutPrizeWinningNums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumOne"/>

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumTwo"/>

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumThree"/>

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumFour"/>

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumFive"/>

            <TextView
                style="@style/PrizeWinningNum"
                android:id="@+id/prizeWinningNumSix"/>

            <TextView
                style="@style/PrizeBonusNum"
                android:id="@+id/prizeBonusNumOne"/>

            <TextView
                style="@style/PrizeBonusNum"
                android:id="@+id/prizeBonusNumTwo"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPrizeDrawInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/font_size_micro"
            android:textColor="@color/dark_text_secondary"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>